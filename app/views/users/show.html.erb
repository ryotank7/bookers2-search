<%= render 'users/profile', user: @user %>
<%= render 'books/list',book: @book %>
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |f| %>
		<tr>
			<td><%= link_to(@book.user) do %>
				<%= attachment_image_tag @user,:profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'40x40',  class: "img-circle pull-left profile-thumb"%>
				<% end %>
			</td>
	<td><%= link_to f.title, book_path(f.id) %> </td>
 	<td><%= f.body %></td>
 	<td><%= render 'users/follow_form' %><td>
 	</tr>
<% end %>
</tbody>
</table>
</div>